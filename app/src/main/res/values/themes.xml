<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SCMAnagata" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/basic2</item>
        <item name="colorPrimaryVariant">@color/basic2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
                <item name="android:windowTranslucentStatus">true</item>
                <item name="android:windowTranslucentNavigation">false</item>
<!--                <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
    </style>

    <style name="Theme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/basic</item>
        <item name="colorPrimaryDark">@color/basic2</item>
        <item name="colorAccent">@color/basic4</item>
        <item name="android:statusBarColor" tools:targetApi="l" tools:ignore="NewApi"> @color/basic3</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop"> @color/basic3</item>
        <!-- Customize your theme here. -->
    </style>


    <!--    style button-->
    <style name="ButtonBasic"  >
        <item name="android:background">@drawable/background_round_basic</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppearanceAppBarGray" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppearanceAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>